<p id="notice"><%= notice %></p>

<h2>User <%= @user.id %></h2>

<% if @user.created_events.empty? %>
<h3>This user has no events.</h3>

<% else %>
<h3>Events created by the user:</h3>
<table>
  <tr>
    <th>id</th>
    <th>Date</th>
    <th>Place</th>
  </tr>
  
  <% for e in @user.created_events %>
  <tr>
    <td><%= link_to e.id, e %></td>
    <td><%= e.date %></td>
    <td><%= e.place %></td>
  </tr>
  <% end %>
</table>
<% end %>

<% if @user.invites.empty? %>
<h3>This user was invited to no events.</h3>

<% else %>
<h3>Upcoming events that this user is invited to:</h3>
<table>
  <tr>
    <th>id</th>
    <th>Date</th>
    <th>Place</th>
	<th>Assists</th>
  </tr>
  
  <% for i in @upcoming_events %>
  <tr>
    <td><%= link_to i.event, i.event %></td>
    <td><%= i.event.date %></td>
    <td><%= i.event.place %></td>
	<td><%= i.attends %></td>
  </tr>
  <% end %>
</table>

<br>
<h3>Past events that this user is invited to:</h3>
<table>
  <tr>
    <th>id</th>
    <th>Date</th>
    <th>Place</th>
	<th>Assists</th>
  </tr>
  
  <% for i in @past_events %>
  <tr>
    <td><%= link_to i.event, i.event %></td>
    <td><%= i.event.date %></td>
    <td><%= i.event.place %></td>
	<td><%= i.attends %></td>
  </tr>
  <% end %>
</table>

<br>
<h3>Permanent events that this user is invited to:</h3>
<table>
  <tr>
    <th>id</th>
    <th>Place</th>
	<th>Assists</th>
  </tr>
  
  <% for i in @permanent_events %>
  <tr>
    <td><%= link_to i.event, i.event %></td>
    <td><%= i.event.place %></td>
	<td><%= i.attends %></td>
  </tr>
  <% end %>
</table>
<% end %>